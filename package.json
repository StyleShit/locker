		"@typescript-eslint/eslint-plugin": "^6.5.0",
		"@typescript-eslint/parser": "^6.5.0",
		"concurrently": "^8.2.1",
		"eslint": "^8.48.0",
		"jest": "^29.6.4",
		"prettier": "^3.0.3",
		"ts-jest": "^29.1.1",
		"tsup": "^7.2.0",
		"typescript": "^5.2.2"
	}
}
